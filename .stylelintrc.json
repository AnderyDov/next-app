{
    "extends": ["stylelint-config-standard", "stylelint-order-config-standard"],
    "plugins": ["stylelint-order"],
    "rules": {
        "indentation": [4],
        "color-hex-case": "upper",
        "string-quotes": "single",
        "selector-class-pattern": "([a-z][a-z0-9]*)(-[a-z0-9]+)*$"
    }
}
